<?xml version="1.0" encoding="UTF-8"?>
<ehcache
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
	 name="spring-cache" updateCheck="false">
  <diskStore path="java.io.tmpdir"/>
  <defaultCache
     maxEntriesLocalHeap="10000"
     eternal="false"
     timeToIdleSeconds="120"
     timeToLiveSeconds="120"
     maxEntriesLocalDisk="100000"
     diskExpiryThreadIntervalSeconds="120"
     memoryStoreEvictionPolicy="LRU">
     <persistence strategy="localTempSwap"/>
  </defaultCache>

  <!-- ### Component Method ### -->

  <!-- AppSettingHandler -->
  <cache name="AppSettingHandler.appSetting"
    maxEntriesLocalHeap="0"
    timeToIdleSeconds="30"
    timeToLiveSeconds="30" />

  <!-- HolidayMasterAccessor -->
  <cache name="HolidayAccessor.getHoliday"
    maxEntriesLocalHeap="0"
    timeToIdleSeconds="1800"
    timeToLiveSeconds="1800" />

  <!-- ### Service Method ### -->

  <!-- AccountService -->
  <cache name="AccountService.getAccount"
    maxEntriesLocalHeap="1000"
    timeToIdleSeconds="1800"
    timeToLiveSeconds="1800" />
  <cache name="AccountService.getLogin"
    maxEntriesLocalHeap="1000"
    timeToIdleSeconds="1800"
    timeToLiveSeconds="1800" />

  <!-- MasterAdminService -->
  <cache name="MasterAdminService.getStaff"
    maxEntriesLocalHeap="100"
    timeToIdleSeconds="1800"
    timeToLiveSeconds="1800" />
  <cache name="MasterAdminService.findStaffAuthority"
    maxEntriesLocalHeap="10000"
    timeToIdleSeconds="1800"
    timeToLiveSeconds="1800" />
</ehcache>
